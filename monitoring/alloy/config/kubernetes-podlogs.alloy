loki.source.podlogs "kubernetes_pods_logs" {
  forward_to = [loki.relabel.podlogs_relabel.receiver]

  clustering {
    enabled = true
  }
}

loki.relabel "podlogs_relabel" {
  forward_to = [loki.relabel.target.receiver]

  rule {
    action = "replace"
    source_labels = ["job"]
    regex = "^.+/(.+)$"
    target_label = "job"
  }
}
